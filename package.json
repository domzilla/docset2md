{
  "name": "docset2md",
  "version": "1.3.0",
  "description": "Convert Apple Documentation docsets to Markdown for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "docset2md": "dist/index.js"
  },
  "scripts": {
    "build": "npm run lint && npm run format:check && tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src tests scripts",
    "lint:fix": "eslint src tests scripts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts'",
    "build:search-cli": "bun build --compile --outfile=dist/docset-search src/search-cli/index.ts",
    "build:search-cli:linux": "bun build --compile --target=bun-linux-x64 --outfile=dist/docset-search-linux src/search-cli/index.ts",
    "build:search-cli:windows": "bun build --compile --target=bun-windows-x64 --outfile=dist/docset-search.exe src/search-cli/index.ts"
  },
  "keywords": [
    "docset",
    "apple",
    "documentation",
    "markdown",
    "docc"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "cheerio": "^1.1.2",
    "commander": "^12.1.0",
    "tar-stream": "^3.1.7",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/tar-stream": "^3.1.4",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.2"
  }
}
